/*Напишите программу вычисляющую среднее арифметическое последовательности чисел. 
*Длина последовательности неизвестна, однако последовательность оканчивается нулем и других нулевых значений не встречается. 
*В программе запрещается использовать дополнительную память(aka массивы, списки…)*/

#include <iostream>
#include <string>

using namespace std;
 
int main() 
{
	int a;
	int b = 1;
	cin >> a;
	if (a == 0) 
		{
			cout << 0;
			return 0;
		}
	int s = a;
	while (cin >> a && a) 
		{
			s += a;
			++b;
		}
	b++;
	cout << (float) s / b;
 
	return 0;
}
